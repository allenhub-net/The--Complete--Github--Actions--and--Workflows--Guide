{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "dependencyDashboardAutoclose": true,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchDatasources": [
        "github-tags",
        "github-releases"
      ],
      "pinDigests": true,
      "groupName": "GitHub Actions",
      "enabled": true
    }
  ],
  "baseBranches": [
    "main"
  ],
  "prHourlyLimit": 1000
}