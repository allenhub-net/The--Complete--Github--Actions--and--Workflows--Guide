{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboardAutoclose": true,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "baseBranches": [
    "main",
    "/^section--[0-9]*/"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchDatasources": [
        "github-tags"
      ],
      "pinDigests": true,
      "groupName": "GitHub Actions",
      "enabled": true
    }
  ],
  "prHourlyLimit": 20
}